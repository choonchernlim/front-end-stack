{
  // using Airbnb and Flow best recommendations
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  // to handle ES7's static properties in React component
  // https://github.com/yannickcr/eslint-plugin-react/issues/43
  "parser": "babel-eslint",
  // Enable Flow type linting
  "plugins": [
    "flowtype"
  ],
  // To prevent "'window' is not defined" or "'document' is not defined"
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  // overriding certain rules because it drives me nuts
  "rules": {
    // no trailing comma in multi-line object literal or array
    "comma-dangle": [
      2,
      "never"
    ],
    // allow `else` on new line
    // http://eslint.org/docs/rules/brace-style
    "brace-style": [
      "error",
      "stroustrup"
    ],
    // allow uppercase functions from ImmutableJS and Radium
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Immutable.List",
          "Immutable.Stack",
          "Immutable.Map",
          "Immutable.OrderedMap",
          "Immutable.Set",
          "Immutable.OrderedSet",
          "Immutable.Record",
          "List",
          "Stack",
          "Map",
          "OrderedMap",
          "Set",
          "OrderedSet",
          "Record",
          "Radium"
        ]
      }
    ],
    // Allow JSX on `.js`
    // See https://github.com/yannickcr/eslint-plugin-react/blob/master/docs/rules/jsx-filename-extension.md
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    // To allow test libraries (ex: chai) to reside in `devDependencies` instead of `dependencies`
    // See https://github.com/airbnb/javascript/issues/959
    // See https://github.com/benmosher/eslint-plugin-import/issues/422
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": true
      }
    ]
  }
}
